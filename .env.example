# App
NODE_ENV=production
PORT=3000
APP_BASE_URL=https://seu-dominio.com
APP_TIMEZONE=America/Fortaleza
MAX_JSON_BODY_SIZE=100kb

# Banco (use DATABASE_URL ou variaveis PG*)
# DATABASE_URL=postgresql://user:password@host:5432/database
PGHOST=
PGPORT=
PGUSER=
PGPASSWORD=
PGDATABASE=

# Seguranca e sessao
ADMIN_USERNAME=admin
ADMIN_PASSWORD=troque-esta-senha
RESET_ADMIN_PASSWORD_ON_BOOT=false
SESSION_TTL_MS=43200000
SESSION_SWEEP_INTERVAL_MS=300000
MAX_ACTIVE_SESSIONS=5000

# Pagamentos
PAYMENT_EXPIRATION_MINUTES=20
PAYMENT_SWEEP_INTERVAL_MS=30000
PAYMENT_WEBHOOK_TOKEN=

# PIX provider:
# - "mock": usa PIX interno de teste
# - "mercadopago": usa API oficial
PIX_PROVIDER=mercadopago

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=
MERCADO_PAGO_WEBHOOK_SECRET=
MERCADO_PAGO_API_BASE_URL=https://api.mercadopago.com
MERCADO_PAGO_NOTIFICATION_URL=https://seu-dominio.com/api/payments/webhook/mercadopago
MERCADO_PAGO_DEFAULT_PAYER_EMAIL={username}@seu-dominio.com

# Fallback visual (modo mock)
PIX_QR_IMAGE_URL=/images/qrcode-pix.png
